{
  "name": "starthub-composite-test",
  "version": "0.0.1",
  "entry": "build/multiply.wasm",
  "abi": "starthub.v1",
  "encoding": "json",
  "permissions": [],
  "inputs": [
    {
      "id": "a",
      "name": "a",
      "type": "number",
      "required": true,
      "default": 1
    },
    {
      "id": "b",
      "name": "b",
      "type": "number",
      "required": true,
      "default": 2
    },
    {
      "id": "c",
      "name": "c",
      "type": "number",
      "required": true,
      "default": 3
    }
  ],
  "steps": [
    {
      "id": "sum",
      "using": "starthub/add@0.0.1",
      "with": {
        "a": "$inputs.a",
        "b": "$inputs.b"
      }
    },
    {
      "id": "product",
      "using": "starthub/multiply@0.0.1",
      "with": {
        "a": "$sum.result",
        "b": "$inputs.c"
      }
    }
  ],
  "outputs": [
    {
      "id": "result",
      "name": "result",
      "type": "number",
      "value": "$product.result"
    }
  ]
}
